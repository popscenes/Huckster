@model Domain.Restaurant.Restaurant

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h2>Edit Details</h2>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(a => a.Id)
        @Html.HiddenFor(a => a.AggregateRootId)
        @Html.HiddenFor(a => a.TimeZoneId)
        @Html.HiddenFor(a => a.TileImageUrl)
        <div class="form-group">
            @Html.LabelFor(a => a.Name)
            @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(a => a.Description)
            @Html.TextAreaFor(a => a.Description, new {@class = "form-control"})
        </div>

        <div class="form-group">
            @Html.LabelFor(a => a.ContactPhone)
            @Html.TextBoxFor(a => a.ContactPhone, new {@class = "form-control"})
        </div>

        <div class="form-group">
            @Html.LabelFor(a => a.Email)
            @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
        </div>

        <input type="submit" value="Submit" class="btn btn-success" />
    }
</div>


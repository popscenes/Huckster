@model Domain.Restaurant.Queries.Models.RestaurantDetailsModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Image</h2>
<div>
    @Html.ActionLink("Back To Restaurant", "Detail", new { id = @ViewBag.RestaurantShortId })
</div>
<img src="@Model.Restaurant.FullTileImageUrl"/>

<form action="" method="post" enctype="multipart/form-data">
    <div class="form-group">
        @Html.Label("Upload New Tile Image", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" id="tileImage" name="tileImage" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Upload" class="btn btn-default" />
        </div>
    </div>
</form>